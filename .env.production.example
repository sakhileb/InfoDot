# InfoDot Laravel 11 - Production Environment Configuration
# Copy this file to .env and configure with your production values

# Application
APP_NAME="InfoDot"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://infodot.com

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=infodot_production
DB_USERNAME=infodot_user
DB_PASSWORD=STRONG_PASSWORD_HERE

# Cache (Redis recommended for production)
CACHE_DRIVER=redis
CACHE_PREFIX=infodot_cache

# Session (Redis recommended for production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_DOMAIN=.infodot.com

# Queue (Redis recommended for production)
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2
REDIS_SESSION_DB=3

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@infodot.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting (Reverb)
BROADCAST_DRIVER=reverb
REVERB_APP_ID=your-app-id
REVERB_APP_KEY=your-app-key
REVERB_APP_SECRET=your-app-secret
REVERB_HOST="ws.infodot.com"
REVERB_PORT=8080
REVERB_SCHEME=https

# Vite (for frontend)
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Search (Meilisearch recommended for production)
SCOUT_DRIVER=meilisearch
SCOUT_QUEUE=true
MEILISEARCH_HOST=https://search.infodot.com
MEILISEARCH_KEY=your-master-key

# File Storage (S3 recommended for production)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=infodot-production
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_URL=https://infodot-production.s3.amazonaws.com

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DAYS=14

# Sanctum
SANCTUM_STATEFUL_DOMAINS=infodot.com,www.infodot.com

# Security
SECURE_COOKIES=true

# Third-Party Services (Optional)

# Pusher (if using instead of Reverb)
# BROADCAST_DRIVER=pusher
# PUSHER_APP_ID=your-app-id
# PUSHER_APP_KEY=your-app-key
# PUSHER_APP_SECRET=your-app-secret
# PUSHER_APP_CLUSTER=mt1

# Algolia (if using instead of Meilisearch)
# SCOUT_DRIVER=algolia
# ALGOLIA_APP_ID=your-app-id
# ALGOLIA_SECRET=your-admin-key

# Monitoring (Optional)

# Sentry
# SENTRY_LARAVEL_DSN=your-sentry-dsn

# New Relic
# NEW_RELIC_LICENSE_KEY=your-license-key
# NEW_RELIC_APP_NAME="${APP_NAME}"

# Development Tools (Disable in production)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Backup
BACKUP_DISK=s3
BACKUP_NOTIFICATION_EMAIL=admin@infodot.com

# Rate Limiting
RATE_LIMIT_API=60
RATE_LIMIT_WEB=1000

# Performance
OCTANE_SERVER=swoole
OCTANE_HTTPS=true

# Additional Security
FORCE_HTTPS=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
